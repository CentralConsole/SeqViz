{
  "name": "sequence-viewer",
  "version": "0.2.0",
  "private": false,
  "type": "module",
  "main": "dist/sequence-viewer.cjs.js",
  "module": "dist/sequence-viewer.es.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "exports": {
    ".": {
      "import": "./dist/sequence-viewer.es.js",
      "require": "./dist/sequence-viewer.cjs.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "dev:simple": "vite --config vite.config.js --open index.simple.html",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "prepare": "npm run build"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19",
    "d3": ">=7"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "d3": "^7.9.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.19",
    "typescript": "^5.0.0",
    "vite": "^5.0.8"
  }
}
